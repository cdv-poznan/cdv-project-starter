{{#if data.results}}
<div class="glide mt-3" id="{{type}}">
    <div data-glide-el="track" class="glide__track">
        <ul class="glide__slides">
            {{#each data.results}}
            <li class="glide__slide"><a href="/{{../media}}/{{{this.id}}}" class="link"><img class="carousel__image"
                        src="{{#if this.poster_path}}{{../data.apiImagesUrl}}/w342{{this.poster_path}}{{else}}https://fakeimg.pl/342x513/?text=No%20poster{{/if}}">
                    <p class="carousel__title mt-2">
                        {{this.title}}
                        {{this.name}}
                    </p>
                </a></li>
            {{/each}}
        </ul>

    </div>
    <div class=" glide__arrows d-none d-md-block" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><i class="fas fa-chevron-left"></i>
        </button> <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><i
                class="fas fa-chevron-right"></i>
        </button>
    </div>

</div>
{{/if}}