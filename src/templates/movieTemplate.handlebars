<div class="jumbotron jumbotron-fluid movie__header"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url({{apiImagesUrl}}/original{{backdrop_path}});">

    <div class="container movie__header__heading ">
        <div class="row">
            <div class="col-3">
                <img src="{{apiImagesUrl}}/w500{{poster_path}}" class="card-img-top movie__header__poster"
                    alt="{{title}} poster">
            </div>
            <div class="col">
                <h1 class="display-4 movie__header__heading__title">{{title}}</h1>
                <p class="mb-3">{{runtime}} min | {{#each genres}}{{#if @index}},
                    {{this.name}}{{else}}{{this.name}}{{/if}}{{/each}}
                </p>
                <p class="lead">{{overview}}</p>
            </div>
        </div>

    </div>
</div>
<div class="movie container mx-auto">
</div>